<div class="modal" data-modal="true" id="newBook_modal">
    <div class="modal-content max-w-[600px] top-[15%]">
        <div class="modal-header py-4 px-5 flex justify-between items-center">
            <h3 class="modal-title">Ajouter un nouveau livre</h3>
            <a href="#" class="text-blue-500 hover:text-blue-700" data-modal-toggle="#newBook_modal">Fermer</a>
        </div>
        <div class="modal-body p-0 pb-5">
            <div class="scrollable-y-auto" data-scrollable="true" data-scrollable-max-height="auto"
                 data-scrollable-offset="300px">
                <form action="{{ path('book_new') }}" method="post" enctype="multipart/form-data">
                    <div class="flex flex-col gap-5 p-5">
                        <div class="flex flex-col gap-1">
                            <label for="name" class="form-label font-normal text-gray-900">Nom du livre</label>
                            <input type="text" id="name" name="name" class="input" required>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="cover" class="form-label font-normal text-gray-900">Couverture</label>
                            <input type="file" id="cover" name="cover" class="input">
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="description" class="form-label font-normal text-gray-900">Description</label>
                            <textarea id="description" name="description" class="textarea" placeholder="Description du livre"></textarea>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="pages" class="form-label font-normal text-gray-900">Nombre de pages</label>
                            <input type="number" id="pages" name="pages" class="input" required>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="publication_date" class="form-label font-normal text-gray-900">Date de publication</label>
                            <input type="date" id="publication_date" name="publication_date" class="input" required>
                        </div>

                        <div class="flex flex-col gap-1">
                            <label for="category" class="form-label font-normal text-gray-900">Cat√©gorie</label>
                            <select id="category" name="category" class="select" required>
                                {% for category in categories %}
                                    <option value="{{ category.id }}">{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="flex flex-col gap-1">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>